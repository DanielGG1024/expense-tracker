<h3>請修改你的支出</h3>

<form action="/edit/{{record._id}}?_method=PUT" method="POST">
    <div class="form-group">
        <label for="name">名稱* :</label>
        <input type="text" name="name" id="name" value="{{record.name}}">
    </div>

    <div class="form-group">
        <label for="date">日期* :</label>
        <input type="date" name="date" id="date" value="{{record.date}}">
    </div>
    <div class="form-group">
        <label for="category">類別* :</label>
        <select name="category" value="{{record.category}}">
            <option value="1">家居物業</option>
            <option value="2">交通出行</option>
            <option value="3">休閒娛樂</option>
            <option value="4">餐飲食品</option>
            <option value="5">其他</option>
        </select>
    </div>

    <div class="form-group">
        <label for="amount">金額* :</label>
        <input type="number" name="amount" id="amount" value="{{record.amount}}">
    </div>

    <div class="form-group">
        <button class="btn btn-light" type="submit" name="submit">送出</button>
    </div>
</form>