<div class="form-group text-center mt-3">
    <select name="category" id="category">
        <option value="1">家居物業</option>
        <option value="2">交通出行</option>
        <option value="3">休閒娛樂</option>
        <option value="4">餐飲食品</option>
        <option value="5">其他</option>
    </select>
</div>

<div class="form-group text-center">
    <label for="">總金額:</label>
    <input type="text" class="h1" disabled value="256667">
</div>

<div class="container">
    <div class="row">
        <div class="col-12">

            {{#each records}}
            <div class="d-flex justify-content-center">
                <div class="col-3">
                    <div>
                        <i>{{this.category}}</i>
                        <h3>{{this.name}}</h3>
                        <small>{{this.date}}</small>
                    </div>
                </div>
                <div class="col-2">
                    <h3>{{this.amount}}</h3>
                </div>
                <div class="col-2">
                    <a href="./edit">修改</a>
                    <a href="">刪除</a>
                </div>
            </div>
            {{/each}}



        </div>
        <a class="btn btn-secondary mx-auto my-3 font-weight-bold p-3" href="./new">新增支出</a>
    </div>
</div>