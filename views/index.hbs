<div class="form-group text-center mt-3">
    <form action="/">

        <select name="category" id="category" onchange="submit()">
            <option value="" selected>所有類別</option>
            {{#each categories}}
            <option value="{{this._id}}">{{this.category}}</option>
            {{/each}}
        </select>

    </form>
</div>

<div class="form-group text-center">
    <label for="">總金額:</label>
    <input type="text" class="h1" disabled value="{{totalAmount}}">
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            {{#each records}}
            <div class="d-flex justify-content-center">
                <div class="col-3">
                    <div>

                        <i class="{{this.category.icon}}"></i>

                        <h3>{{this.name}}</h3>
                        <small>{{toDate this.date}}</small>
                    </div>
                </div>
                <div class="col-2">
                    <h3>{{this.amount}}</h3>
                </div>
                <div class="col-2">
                    <a href="./edit/{{this._id}}">修改</a>
                    <form action="/expenseTracker/{{this._id}}?_method=DELETE" method="POST"
                        style="display:inline-block;">
                        <button type="submit" class="btn btn-danger">delete</button>
                    </form>
                </div>
            </div>
            {{/each}}



        </div>
        <a class="btn btn-secondary mx-auto my-3 font-weight-bold p-3" href="./new">新增支出</a>
    </div>
</div>